<%- include('../partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Two-Factor Authentication</h4>
      </div>
      <div class="card-body">
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger">
            <%= error %>
          </div>
        <% } %>
        
        <p class="mb-4">
          Please enter the verification code from your Google Authenticator app.
        </p>
        
        <form action="/auth/verify-2fa" method="POST">
          <div class="mb-3">
            <label for="token" class="form-label">Authentication Code</label>
            <input type="text" class="form-control" id="token" name="token" 
                   placeholder="6-digit code" required autocomplete="off" inputmode="numeric" pattern="[0-9]*" maxlength="6">
            <div class="form-text">Enter the 6-digit code from your authenticator app</div>
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Verify</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 