<%- include('partials/header') %>

<div class="row">
  <div class="col-md-8 mx-auto text-center">
    <div class="card border-danger">
      <div class="card-header bg-danger text-white">
        <h2><i class="bi bi-exclamation-triangle"></i> Error</h2>
      </div>
      <div class="card-body">
        <h3 class="card-title"><%= message %></h3>
        <% if (error && error.stack && process.env.NODE_ENV !== 'production') { %>
          <div class="alert alert-secondary mt-4">
            <h4>Error Details (Development Only)</h4>
            <pre class="text-start"><%= error.stack %></pre>
          </div>
        <% } %>
        <a href="/" class="btn btn-primary mt-3">
          <i class="bi bi-house-door"></i> Return to Home
        </a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 